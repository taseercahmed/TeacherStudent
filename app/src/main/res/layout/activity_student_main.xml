<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/student_drawer_layout"
    android:layout_height="match_parent"
    tools:context=".Student.StudentMainActivity">

    <include
        layout="@layout/activity_student_main_included"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/student_navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/activityBackground"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        app:headerLayout="@layout/student_header_nav"
        app:itemIconTint="@color/purewhite"
        app:itemTextColor="@color/white"
        app:menu="@menu/student_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>